<h2 class="text-center">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
<%= f.error_notification %>
<%= f.input :email, required: true, autofocus: true, label: false %>
<%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block btn-md" %>
<% end %>

<%= render "devise/shared/links" %>
